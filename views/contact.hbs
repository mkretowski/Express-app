<h2>Contact me</h2>
<form action='/contact/send-message' method='POST' enctype='multipart/form-data'>
  {{#if isSent}}
    <div class='isSent'>The message has been sent! File {{image}} has been saved.</div>
    <img src='/uploads/{{image}}' alt='{{image}}' />
  {{/if}}
  {{#if isError}}
    <div class='isError'>You can't leave fields empty!</div>
  {{/if}}

  <label>
    Your name:
    <input type='text' name='author' />
  </label>
  <label>
    Your email:
    <input type='email' name='sender' />
  </label>
  <label>
    Title:
    <input type='text' name='title' />
  </label>
  <label>
    Project design:
    <input type='file' name='file' accept='.jpg,.jpeg,.png,.gif' />
  </label>
  <label>
    Message:
    <textarea name='message'></textarea>
  </label>
  <button type='submit'>Send message</button>
</form>